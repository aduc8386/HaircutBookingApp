<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Hey, "
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/iv_search_icon"
        app:layout_constraintStart_toStartOf="@id/iv_menu_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gentleman"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_hello"
        app:layout_constraintStart_toStartOf="@id/tv_hello"
        app:layout_constraintTop_toBottomOf="@id/tv_hello" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="How can we serve you?"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_book"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_primary_button"
        android:text="Book"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="@id/tv_ask"
        app:layout_constraintTop_toBottomOf="@id/tv_ask" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_history"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_secondary_button"
        android:text="History"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_book"
        app:layout_constraintEnd_toEndOf="@id/tv_ask"
        app:layout_constraintStart_toEndOf="@id/btn_book"
        app:layout_constraintTop_toTopOf="@id/btn_book" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_service"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_secondary_button"
        android:text="Serveces"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/btn_barbershop"
        app:layout_constraintStart_toStartOf="@id/btn_book"
        app:layout_constraintTop_toBottomOf="@id/btn_book" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_barbershop"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_secondary_button"
        android:text="Barbershop"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_service"
        app:layout_constraintEnd_toEndOf="@id/btn_history"
        app:layout_constraintStart_toEndOf="@id/btn_service"
        app:layout_constraintTop_toTopOf="@id/btn_service" />


</androidx.constraintlayout.widget.ConstraintLayout>