<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Information"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/civ_barbershop_avatar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@id/tv_info"
        app:layout_constraintStart_toStartOf="@id/tv_info"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_barbershop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="Barbershop name: "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civ_barbershop_avatar" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_barbershop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_barbershop_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_barbershop_name"
        app:layout_constraintTop_toTopOf="@id/tv_barbershop_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_barbershop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="Address: "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_barbershop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_barbershop_name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_barbershop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_barbershop_address"
        app:layout_constraintEnd_toEndOf="@id/edt_barbershop_name"
        app:layout_constraintStart_toEndOf="@id/tv_barbershop_address"
        app:layout_constraintTop_toTopOf="@id/tv_barbershop_address" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_barbershop_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="Phone number: "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_barbershop_address"
        app:layout_constraintTop_toBottomOf="@id/tv_barbershop_address" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_barbershop_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_barbershop_phone_number"
        app:layout_constraintEnd_toEndOf="@id/edt_barbershop_address"
        app:layout_constraintStart_toEndOf="@id/tv_barbershop_phone_number"
        app:layout_constraintTop_toTopOf="@id/tv_barbershop_phone_number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_login_button"
        android:padding="10dp"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edt_barbershop_phone_number"
        app:layout_constraintStart_toStartOf="@id/tv_barbershop_phone_number" />


</androidx.constraintlayout.widget.ConstraintLayout>